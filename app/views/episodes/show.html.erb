<p id="notice"><%= notice %></p>
<% require 'http' %>
<center>
<br>
<br>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
<section class="ftco-section ftco-wrap-about">
<div class="heading-section ftco-animate mb-5 text-center">
  <span class="subheading"><%=@episode.name%></span>
  <h1 class="mb-5">Episode</h1>
  <div class="container">
      <p>
        <strong>Name:</strong>
        <%= @episode.name %>
      </p>

      <p>
        <strong>Air date:</strong>
        <%= @episode.air_date %>
      </p>

      <p>
        <strong>Episode Code:</strong>
        <%= @episode.episode %>
      </p>

      <p>
        <strong>Characters:</strong>
        <% @episode.characters.each do |char|%>
          <br>
          <% info = HTTP.get(char).to_s %>
          <% hash_info = eval(info) %>
          <%= link_to hash_info[:name], character_path(hash_info[:id]) %>
        <% end %>
      </p>
    </div>
</div>
</section>


<%= link_to 'All Episodes', episodes_path %>
