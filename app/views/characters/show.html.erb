<p id="notice"><%= notice %></p>
<center>
<br>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
<section class="ftco-section ftco-wrap-about">
<div class="heading-section ftco-animate mb-5 text-center">
<span class="subheading"><%=@character.name%></span>
</div>
  <div class="container">
    <div class="row">
      <div class="col-md-3 wrap-about pt-5 pt-md-5 pb-md-3 ftco-animate" style="background-image: url(<%=@character.image%>); background-repeat: no-repeat;" >
      </div>
      <div class="col-md-4 wrap-about pt-5 pt-md-5 pb-md-3 ftco-animate">
        <p>
          <strong>Name:</strong>
          <%= @character.name %>
        </p>

        <p>
          <strong>Status:</strong>
          <%= @character.status %>
        </p>

        <p>
          <strong>Species:</strong>
          <%= @character.species %>
        </p>

        <p>
          <strong>Gender:</strong>
          <%= @character.gender %>
        </p>

        <p>
          <strong>Origin:</strong>
          <br>
            <% hash_info = eval(@character.origin) %>
            <% if (hash_info[:name] != "unknown") %>
              <% loc = @locations.where("url LIKE :loc", loc: hash_info[:url])%>
              <%= link_to loc[0][:name], location_path(loc[0][:id]) %>
            <% else %>
              <%= hash_info[:name]%>
            <% end %>
        </p>

        <p>
          <strong>Location:</strong>
          <br>
            <% hash_info = eval(@character.location) %>
            <% if (hash_info[:name] != "unknown") %>
              <% loc = @locations.where("url LIKE :loc", loc: hash_info[:url])%>
              <%= link_to loc[0][:name], location_path(loc[0][:id]) %>
            <% else %>
              <%= hash_info[:name]%>
            <% end %>
        </p>
      </div>
      <div class="col-md-4 wrap-about pt-5 pt-md-5 pb-md-3 ftco-animate">


        <p>
          <strong>Episodes:</strong>
          <% list = @character.episode %>
          <% list.each do |ep| %>
            <br>
            <% epi = @episodes.where("url LIKE :epi", epi: ep)%>
            <%= link_to epi[0][:name], episode_path(epi[0][:id]) %>
          <% end %>
        </p>
      </div>
    </div>
  </section>
<%= link_to 'All Characters', characters_path %>
